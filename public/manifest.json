{
    "name": "Media Downloader",
    "short_name": "React App",
    "description": "Chrome extension download images, videos",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": ["tabs", "storage", "scripting", "activeTab", "downloads", "webRequest"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_icon": {
            "16": "icon_16.png",
            "48": "icon_48.png",
            "128": "icon_128.png"
        },
        "default_title": "Medias downloader",
        "default_popup": "index.html"
    },
    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "background": {
        "service_worker": "./appBackground.js"
    }
}
